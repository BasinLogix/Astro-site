---
import GetStartedDrawer from '../components/GetStartedDrawer.astro';
import '../styles/fonts.css';

export interface Props {
	title?: string;
	description?: string;
}

const { title = "Basin Logix", description = "Basin Logix - water accounting platform." } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" href="/favicon-32x32.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="twitter:site" content="@BasinLogix" />
		<meta name="twitter:creator" content="@BasinLogix" />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	</head>
	<body class="page-home">
		<header class="header">
			<div class="container">
				<div class="header-content">
					<div class="logo">
						<a href="/">
							<img src="/images/logo/logo.png" alt="Basin Logix - The water accounting platform" height="50" />
						</a>
					</div>
					<nav class="main-menu">
						<ul>
							<li><a href="#" data-get-started class="get-started-btn">Get Started</a></li>
						</ul>
					</nav>
				</div>
			</div>
		</header>

		<main>
			<slot />
		</main>

		<footer class="footer">
			<div class="container">
				<div class="row">
					<div class="col-12">
						<div class="sub-footer">
							<div class="footer-left">
								<div class="social">
									<a href="#"><img src="/images/social/github.svg" alt="Github" /></a>
									<a href="#"><img src="/images/social/x.svg" alt="X" /></a>
								</div>
								<div class="footer-links">
									<a href="/blog/">Blog</a>
								</div>
							</div>
							<div class="copyright">
								<p>Â© 2025 Basin Logix LLC. All rights reserved.</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</footer>

		<GetStartedDrawer />
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	</body>
</html>

<style is:global>
	:root {
		--primary-color: #3871b8;
		--black: #222222;
		--white: #f8f9fa;
		--white-offset: #85bea9ff;
		--grey: #5C5A5A;
	}

	html, body {
		margin: 0;
		padding: 0;
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		color: var(--black);
		background-color: var(--white);
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		font-weight: 600;
	}

	.header {
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(20px);
		border: none;
		border-radius: 16px;
		padding: 0 25px;
		height: 70px;
		box-shadow: 
			0 8px 32px rgba(0, 0, 0, 0.08),
			0 2px 8px rgba(0, 0, 0, 0.04);
		position: fixed;
		top: 20px;
		left: 50%;
		transform: translateX(-50%);
		width: calc(100% - 4rem);
		max-width: 1200px;
		z-index: 1000;
		transition: all 0.3s ease;
		display: flex;
		align-items: center;
	}


	.header-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
		width: 100%;
		height: 100%;
	}


	.main-menu ul {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		gap: 2rem;
	}

	.main-menu a {
		text-decoration: none;
		color: var(--black);
		font-weight: 500;
		padding: 0.75rem 1.25rem;
		border-radius: 12px;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
	}

	.get-started-btn {
		background: linear-gradient(135deg, var(--primary-color) 0%, #156fa0 100%);
		color: white !important;
		border: none;
		box-shadow: 
			0 4px 12px rgba(27, 129, 187, 0.25),
			0 2px 4px rgba(27, 129, 187, 0.15);
		font-weight: 600;
		letter-spacing: 0.5px;
		text-transform: uppercase;
		font-size: 0.9rem;
	}

	.get-started-btn:hover {
		transform: translateY(-2px);
		box-shadow: 
			0 8px 20px rgba(27, 129, 187, 0.35),
			0 4px 8px rgba(27, 129, 187, 0.2);
		background: linear-gradient(135deg, #1a7bb8 0%, #134e7a 100%) !important;
		color: white !important;
	}

	.main-menu a::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, 
			rgba(27, 129, 187, 0.08) 0%, 
			rgba(133, 190, 169, 0.06) 100%);
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.main-menu a:hover {
		color: var(--primary-color);
		background: rgba(255, 255, 255, 0.8);
		backdrop-filter: blur(10px);
		box-shadow: 
			0 4px 12px rgba(27, 129, 187, 0.15),
			0 1px 3px rgba(27, 129, 187, 0.1);
		transform: translateY(-1px);
	}

	.main-menu a:hover::before {
		opacity: 1;
	}

	.footer {
		background: linear-gradient(135deg, 
			rgba(34, 34, 34, 0.95) 0%, 
			rgba(34, 34, 34, 0.98) 100%);
		backdrop-filter: blur(15px);
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		color: var(--white);
		padding: 3rem 0;
		margin-top: 0;
		position: relative;
	}

	.footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, 
			transparent 0%, 
			rgba(133, 190, 169, 0.3) 50%, 
			transparent 100%);
	}

	.sub-footer {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 2rem;
	}

	.footer-left {
		display: flex;
		align-items: center;
		gap: 2rem;
	}

	.footer-links {
		display: flex;
		gap: 1.5rem;
	}

	.footer-links a {
		color: var(--white-offset);
		text-decoration: none;
		font-weight: 500;
		transition: color 0.3s ease;
	}

	.footer-links a:hover {
		color: white;
		text-decoration: none;
	}

	.social {
		display: flex;
		gap: 1rem;
	}

	.social img {
		width: 24px;
		height: 24px;
		filter: invert(1);
	}

	.social img[src*="x.svg"] {
		filter: none;
	}

	.copyright a {
		color: var(--white-offset);
		text-decoration: none;
	}

	.intro {
		height: 600px;
		padding: 4rem 0;
		position: relative;
		background: linear-gradient(135deg, 
			rgba(220, 240, 255, 0.9) 0%, 
			rgba(220, 255, 220, 0.9) 100%);
		overflow: hidden;
		display: flex;
		align-items: center;
	}


	.intro-image {
		max-width: 100%;
		height: auto;
	}

	.button {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		background: var(--primary-color);
		color: white;
		text-decoration: none;
		border-radius: 4px;
		font-weight: 600;
		transition: background-color 0.3s;
	}

	.button:hover {
		background: #156fa0;
		color: white;
	}

	.feature {
		text-align: center;
		padding: 2.5rem;
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(20px);
		border: none;
		border-radius: 16px;
		box-shadow: 
			0 8px 32px rgba(0, 0, 0, 0.08),
			0 2px 8px rgba(0, 0, 0, 0.04);
		height: 100%;
		position: relative;
		overflow: hidden;
	}


	.feature-image {
		margin-bottom: 1rem;
	}

	.feature-image img {
		width: 80px;
		height: 80px;
	}

	.strip {
		padding: 4rem 0;
	}

	.strip-grey {
		position: relative;
		min-height: 100vh;
		display: flex;
		align-items: center;
	}

	.strip-grey::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			radial-gradient(circle at 30% 20%, rgba(27, 129, 187, 0.03) 0%, transparent 60%),
			radial-gradient(circle at 70% 80%, rgba(133, 190, 169, 0.04) 0%, transparent 60%);
		pointer-events: none;
	}

	@media (max-width: 834px) {
		.get-started-btn {
			padding: 0.5rem 0.75rem;
			font-size: 0.8rem;
			white-space: nowrap;
		}
	}

	@media (max-width: 768px) {
		.intro {
			padding: 2rem 0;
		}
		
		.strip {
			padding: 2rem 0;
		}
		
		.get-started-btn {
			padding: 0.4rem 0.6rem;
			font-size: 0.75rem;
		}
	}
</style>
