---
import GetStartedDrawer from '../components/GetStartedDrawer.astro';
import '../styles/fonts.css';

export interface Props {
	title?: string;
	description?: string;
}

const { title = "Basin Logix", description = "Basin Logix - water accounting platform." } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" href="/favicon-32x32.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="twitter:site" content="@BasinLogix" />
		<meta name="twitter:creator" content="@BasinLogix" />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	</head>
	<body class="page-home">
		<header class="header">
			<div class="container">
				<div class="row justify-content-between align-items-center">
					<div class="col-auto">
						<div class="logo">
							<a href="/">
								<img src="/images/logo/logo.png" alt="Basin Logix - The water accounting platform" height="100" />
							</a>
						</div>
					</div>
					<div class="col-auto">
						<nav class="main-menu">
							<ul>
								<li><a href="/services/">Services</a></li>
								<li><a href="/blog/">Blog</a></li>
								<li><a href="/about/">About</a></li>
								<li><a href="#" data-get-started>Get Started</a></li>
							</ul>
						</nav>
					</div>
				</div>
			</div>
		</header>

		<main>
			<slot />
		</main>

		<footer class="footer">
			<div class="container">
				<div class="row">
					<div class="col-12">
						<div class="sub-footer">
							<div class="social">
								<a href="#"><img src="/images/social/github.svg" alt="Github" /></a>
								<a href="#"><img src="/images/social/twitter.svg" alt="Twitter" /></a>
							</div>
							<div class="copyright">
								<p>Theme by <a class="zerostatic" href="https://www.zerostatic.io">zerostatic</a></p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</footer>

		<GetStartedDrawer />
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	</body>
</html>

<style is:global>
	:root {
		--primary-color: #3871b8;
		--black: #222222;
		--white: #F2F2F2;
		--white-offset: #85bea9ff;
		--grey: #5C5A5A;
	}

	html, body {
		margin: 0;
		padding: 0;
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		color: var(--black);
		background-color: var(--white);
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		font-weight: 600;
	}

	.header {
		background: rgba(255, 255, 255, 0.85);
		backdrop-filter: blur(20px);
		border-bottom: 1px solid rgba(255, 255, 255, 0.2);
		padding: 1.5rem 0;
		box-shadow: 
			0 8px 32px rgba(0, 0, 0, 0.06),
			0 2px 8px rgba(0, 0, 0, 0.03);
		position: sticky;
		top: 0;
		z-index: 1000;
		transition: all 0.3s ease;
	}

	.header::before {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, 
			transparent 0%, 
			rgba(27, 129, 187, 0.2) 50%, 
			transparent 100%);
	}

	.main-menu ul {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		gap: 2rem;
	}

	.main-menu a {
		text-decoration: none;
		color: var(--black);
		font-weight: 500;
		padding: 0.75rem 1.25rem;
		border-radius: 12px;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
	}

	.main-menu a::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, 
			rgba(27, 129, 187, 0.08) 0%, 
			rgba(133, 190, 169, 0.06) 100%);
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.main-menu a:hover {
		color: var(--primary-color);
		background: rgba(255, 255, 255, 0.8);
		backdrop-filter: blur(10px);
		box-shadow: 
			0 4px 12px rgba(27, 129, 187, 0.15),
			0 1px 3px rgba(27, 129, 187, 0.1);
		transform: translateY(-1px);
	}

	.main-menu a:hover::before {
		opacity: 1;
	}

	.footer {
		background: linear-gradient(135deg, 
			rgba(34, 34, 34, 0.95) 0%, 
			rgba(34, 34, 34, 0.98) 100%);
		backdrop-filter: blur(15px);
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		color: var(--white);
		padding: 3rem 0;
		margin-top: 4rem;
		position: relative;
	}

	.footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, 
			transparent 0%, 
			rgba(133, 190, 169, 0.3) 50%, 
			transparent 100%);
	}

	.sub-footer {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.social {
		display: flex;
		gap: 1rem;
	}

	.social img {
		width: 24px;
		height: 24px;
		filter: invert(1);
	}

	.copyright a {
		color: var(--white-offset);
		text-decoration: none;
	}

	.intro {
		padding: 4rem 0;
		position: relative;
		background: linear-gradient(135deg, 
			rgba(27, 129, 187, 0.05) 0%, 
			rgba(133, 190, 169, 0.08) 50%,
			rgba(27, 129, 187, 0.03) 100%);
		backdrop-filter: blur(10px);
		overflow: hidden;
	}

	.intro::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			radial-gradient(circle at 20% 30%, rgba(27, 129, 187, 0.1) 0%, transparent 50%),
			radial-gradient(circle at 80% 70%, rgba(133, 190, 169, 0.08) 0%, transparent 50%);
		pointer-events: none;
	}

	.intro-image {
		max-width: 100%;
		height: auto;
	}

	.button {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		background: var(--primary-color);
		color: white;
		text-decoration: none;
		border-radius: 4px;
		font-weight: 600;
		transition: background-color 0.3s;
	}

	.button:hover {
		background: #156fa0;
		color: white;
	}

	.feature {
		text-align: center;
		padding: 2.5rem;
		background: rgba(255, 255, 255, 0.85);
		backdrop-filter: blur(20px);
		border: 1px solid rgba(255, 255, 255, 0.2);
		border-radius: 16px;
		box-shadow: 
			0 8px 32px rgba(0, 0, 0, 0.08),
			0 2px 8px rgba(0, 0, 0, 0.04),
			inset 0 1px 0 rgba(255, 255, 255, 0.3);
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		height: 100%;
		position: relative;
		overflow: hidden;
	}

	.feature::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, 
			transparent 0%, 
			rgba(27, 129, 187, 0.3) 50%, 
			transparent 100%);
	}

	.feature:hover {
		transform: translateY(-8px) scale(1.02);
		box-shadow: 
			0 20px 40px rgba(0, 0, 0, 0.12),
			0 8px 16px rgba(0, 0, 0, 0.08),
			inset 0 1px 0 rgba(255, 255, 255, 0.4);
		background: rgba(255, 255, 255, 0.9);
	}

	.feature-image {
		margin-bottom: 1rem;
	}

	.feature-image img {
		width: 80px;
		height: 80px;
	}

	.strip {
		padding: 4rem 0;
	}

	.strip-grey {
		background: linear-gradient(180deg, 
			rgba(248, 249, 250, 0.6) 0%, 
			rgba(255, 255, 255, 0.4) 100%);
		backdrop-filter: blur(5px);
		position: relative;
	}

	.strip-grey::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			radial-gradient(circle at 30% 20%, rgba(27, 129, 187, 0.03) 0%, transparent 60%),
			radial-gradient(circle at 70% 80%, rgba(133, 190, 169, 0.04) 0%, transparent 60%);
		pointer-events: none;
	}

	@media (max-width: 768px) {
		.main-menu {
			display: none;
		}
		
		.intro {
			padding: 2rem 0;
		}
		
		.strip {
			padding: 2rem 0;
		}
	}
</style>
