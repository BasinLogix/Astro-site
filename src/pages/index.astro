	html {
		scroll-behavior: smooth;
	}

	.full-panel {
		padding: 3rem 0;
		position: relative;
		overflow: hidden;
		z-index: 50;
	}

	@media (min-width: 768px) {
		.full-panel {
			padding: 5rem 0;
		}
	}

	.full-panel::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
			radial-gradient(circle at 80% 70%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
		pointer-events: none;
	}

	.blue-panel {
		background: linear-gradient(135deg, #e6f3ff 0%, #cce7ff 100%);
		color: #333;
	}

	.green-panel {
		background: linear-gradient(135deg, #3c8556 0%, #2d6440 100%);
		color: white;
	}

	.teal-panel {
		background: linear-gradient(135deg, var(--white-offset) 0%, #6a9a8a 100%);
		color: white;
	}

