		57.14% { transform: translateX(25vw) }
		71.42% { transform: translateX(29vw) }
		85.71% { transform: translateX(13vw) }
		100% { transform: translateX(13vw) }
	}

	@keyframes word2-shift {
		0% { transform: translateX(45vw) translateY(0) }
		14.28% { transform: translateX(47vw) translateY(-7vw) }
		28.57% { transform: translateX(43vw) translateY(-14vw) }
		42.85% { transform: translateX(46vw) translateY(-21vw) }
		57.14% { transform: translateX(39vw) translateY(-28vw) }
		71.42% { transform: translateX(42.5vw) translateY(-35vw) }
		85.71% { transform: translateX(43vw) translateY(-42vw) }
		100% { transform: translateX(43vw) translateY(-42vw) }
	}

	@keyframes final-text-appear {
		0% { opacity: 0; transform: translateX(12vw) }
		14.28% { opacity: 0; transform: translateX(12vw) }
		28.57% { opacity: 0; transform: translateX(12vw) }
		42.85% { opacity: 0; transform: translateX(12vw) }
		57.14% { opacity: 0; transform: translateX(12vw) }
		71.42% { opacity: 0; transform: translateX(12vw) }
		85.71% { opacity: 1; transform: translateX(28vw) }
		100% { opacity: 1; transform: translateX(28vw) }
	}

	.silver-glow {
		color: #1a1a1a;
		text-shadow: 
			0 0 2px rgba(255, 255, 255, 0.8),
			0 0 4px rgba(255, 255, 255, 0.8),
			0 0 6px rgba(255, 255, 255, 0.8),
			0 0 8px rgba(255, 255, 255, 0.8),
			0 0 10px rgba(255, 255, 255, 0.8),
			0 0 12px rgba(255, 255, 255, 0.8),
			0 0 14px rgba(255, 255, 255, 0.8),
			0 0 16px rgba(255, 255, 255, 0.8),
			0 0 18px rgba(255, 255, 255, 0.8),
			0 0 20px rgba(255, 255, 255, 0.8),
			0 0 22px rgba(255, 255, 255, 0.8),
			0 0 24px rgba(255, 255, 255, 0.8),
			0 0 26px rgba(255, 255, 255, 0.8),
			0 0 28px rgba(255, 255, 255, 0.8),
			0 0 30px rgba(255, 255, 255, 0.8);
		animation: silver-pulse 2s ease-in-out infinite;
	}

	@keyframes silver-pulse {
		0% { text-shadow: 
			0 0 2px rgba(255, 255, 255, 0.8),
			0 0 4px rgba(255, 255, 255, 0.8),
			0 0 6px rgba(255, 255, 255, 0.8),
			0 0 8px rgba(255, 255, 255, 0.8),
			0 0 10px rgba(255, 255, 255, 0.8),
			0 0 12px rgba(255, 255, 255, 0.8),
			0 0 14px rgba(255, 255, 255, 0.8),
			0 0 16px rgba(255, 255, 255, 0.8),
