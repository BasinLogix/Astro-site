---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog');
const sortedPosts = blogPosts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Blog - Basin Logix" description="Read the latest insights and updates from Basin Logix on water resource management, blockchain technology, and sustainable agriculture.">
	<div class="blog-intro">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-12 col-lg-8 text-center">
					<h1>Blog</h1>
				</div>
			</div>
		</div>
	</div>

	<div class="blog-listing">
		<div class="container">
			<div class="row justify-content-center">
				{sortedPosts.map((post) => (
					<div class="col-12 col-md-6 col-lg-4 mb-4">
						<article class="blog-card">
							<div class="blog-card-content">
								<div class="blog-meta">
									{post.data.date.toLocaleDateString('en-US', { 
										year: 'numeric', 
										month: 'long', 
										day: 'numeric' 
									})}
								</div>
								<h2 class="blog-title">
									<a href={`/blog/${post.slug}`}>{post.data.title}</a>
								</h2>
								<p class="blog-excerpt">
									{post.data.excerpt || 'Read more...'}
								</p>
								<a href={`/blog/${post.slug}`} class="read-more">
									Read More â†’
								</a>
							</div>
						</article>
					</div>
				))}
			</div>
		</div>
	</div>
</Layout>

<style>
	.blog-intro {
		padding: 6rem 0 4rem;
		background: linear-gradient(135deg, 
			rgba(220, 240, 255, 0.9) 0%, 
			rgba(220, 255, 220, 0.9) 100%);
		position: relative;
		overflow: hidden;
	}

	.blog-intro h1 {
		font-size: 3.5rem;
		font-weight: 700;
		line-height: 1.1;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, 
			var(--primary-color) 0%, 
			var(--white-offset) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.blog-intro .lead {
		font-size: 1.25rem;
		line-height: 1.6;
		color: var(--grey);
		margin: 0;
	}

	.blog-listing {
		padding: 5rem 0;
		background: var(--white);
	}

	.blog-card {
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(20px);
		border: none;
		border-radius: 16px;
		box-shadow: 
			0 8px 32px rgba(0, 0, 0, 0.08),
			0 2px 8px rgba(0, 0, 0, 0.04);
		transition: all 0.3s ease;
		height: 100%;
		overflow: hidden;
	}

	.blog-card:hover {
		transform: translateY(-4px);
		box-shadow: 
			0 16px 48px rgba(0, 0, 0, 0.12),
			0 4px 16px rgba(0, 0, 0, 0.08);
	}

	.blog-card-content {
		padding: 2rem;
		height: 100%;
		display: flex;
		flex-direction: column;
	}

	.blog-meta {
		font-size: 0.9rem;
		color: var(--primary-color);
		font-weight: 600;
		margin-bottom: 1rem;
	}

	.blog-title {
		font-size: 1.5rem;
		font-weight: 700;
		margin-bottom: 1rem;
		line-height: 1.3;
	}

	.blog-title a {
		color: var(--black);
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.blog-title a:hover {
		color: var(--primary-color);
	}

	.blog-excerpt {
		color: var(--grey);
		line-height: 1.6;
		margin-bottom: 1.5rem;
		flex-grow: 1;
	}

	.read-more {
		color: var(--primary-color);
		text-decoration: none;
		font-weight: 600;
		font-size: 0.95rem;
		transition: all 0.3s ease;
		align-self: flex-start;
	}

	.read-more:hover {
		color: #156fa0;
		text-decoration: none;
		transform: translateX(4px);
	}

	@media (max-width: 768px) {
		.blog-intro {
			padding: 4rem 0 3rem;
		}

		.blog-intro h1 {
			font-size: 2.5rem;
		}

		.blog-intro .lead {
			font-size: 1.1rem;
		}

		.blog-listing {
			padding: 3rem 0;
		}

		.blog-card-content {
			padding: 1.5rem;
		}

		.blog-title {
			font-size: 1.25rem;
		}
	}
</style>