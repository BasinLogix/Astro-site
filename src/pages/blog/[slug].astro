---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={`${post.data.title} - Basin Logix Blog`} description={post.data.excerpt || `Read ${post.data.title} on the Basin Logix blog.`}>
	<article class="blog-post">
		<div class="blog-header">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-12 col-lg-8">
						<div class="blog-meta">
							<a href="/blog/" class="back-link">← Back to Blog</a>
							<time datetime={post.data.date.toISOString()}>
								{post.data.date.toLocaleDateString('en-US', { 
									year: 'numeric', 
									month: 'long', 
									day: 'numeric' 
								})}
							</time>
						</div>
						<h1 class="blog-title">{post.data.title}</h1>
						{post.data.excerpt && (
							<p class="blog-excerpt">{post.data.excerpt}</p>
						)}
					</div>
				</div>
			</div>
		</div>

		<div class="blog-content">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-12 col-lg-8">
						<div class="content">
							<Content />
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="blog-footer">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-12 col-lg-8">
						<div class="blog-navigation">
							<a href="/blog/" class="btn-secondary">← Back to Blog</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</article>
</Layout>

<style>
	.blog-post {
		background: var(--white);
	}

	.blog-header {
		padding: 6rem 0 4rem;
		background: linear-gradient(135deg, 
			rgba(220, 240, 255, 0.4) 0%, 
			rgba(220, 255, 220, 0.4) 100%);
		border-bottom: 1px solid rgba(0, 0, 0, 0.05);
	}

	.blog-meta {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 2rem;
		font-size: 0.95rem;
	}

	.back-link {
		color: var(--primary-color);
		text-decoration: none;
		font-weight: 600;
		transition: color 0.3s ease;
	}

	.back-link:hover {
		color: #156fa0;
		text-decoration: none;
	}

	.blog-meta time {
		color: var(--grey);
		font-weight: 500;
	}

	.blog-title {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1.2;
		margin-bottom: 1.5rem;
		color: var(--black);
	}

	.blog-excerpt {
		font-size: 1.25rem;
		line-height: 1.6;
		color: var(--grey);
		font-style: italic;
		margin: 0;
	}

	.blog-content {
		padding: 4rem 0;
	}

	.content {
		font-size: 1.1rem;
		line-height: 1.8;
		color: var(--black);
	}

	.content h1,
	.content h2,
	.content h3,
	.content h4,
	.content h5,
	.content h6 {
		color: var(--black);
		font-weight: 700;
		margin: 2.5rem 0 1.5rem;
		line-height: 1.3;
	}

	.content h1 {
		font-size: 2.5rem;
	}

	.content h2 {
		font-size: 2rem;
	}

	.content h3 {
		font-size: 1.5rem;
	}

	.content p {
		margin-bottom: 1.5rem;
	}

	.content a {
		color: var(--primary-color);
		text-decoration: underline;
		transition: color 0.3s ease;
	}

	.content a:hover {
		color: #156fa0;
	}

	.content img {
		width: 100%;
		height: auto;
		border-radius: 12px;
		margin: 2rem 0;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
	}

	.content blockquote {
		border-left: 4px solid var(--primary-color);
		padding: 1.5rem 2rem;
		margin: 2rem 0;
		background: rgba(56, 113, 184, 0.05);
		border-radius: 0 8px 8px 0;
		font-style: italic;
	}

	.content blockquote p {
		margin-bottom: 0;
	}

	.content ul,
	.content ol {
		margin: 1.5rem 0;
		padding-left: 2rem;
	}

	.content li {
		margin-bottom: 0.5rem;
	}

	.content code {
		background: rgba(0, 0, 0, 0.05);
		padding: 0.2rem 0.4rem;
		border-radius: 4px;
		font-family: 'Monaco', 'Consolas', monospace;
		font-size: 0.9em;
	}

	.content pre {
		background: rgba(0, 0, 0, 0.05);
		padding: 1.5rem;
		border-radius: 8px;
		overflow-x: auto;
		margin: 2rem 0;
	}

	.content pre code {
		background: none;
		padding: 0;
	}

	.blog-footer {
		padding: 3rem 0;
		border-top: 1px solid rgba(0, 0, 0, 0.05);
		background: rgba(248, 249, 250, 0.5);
	}

	.blog-navigation {
		text-align: center;
	}

	.btn-secondary {
		display: inline-block;
		padding: 0.75rem 2rem;
		background: rgba(255, 255, 255, 0.9);
		backdrop-filter: blur(20px);
		border: 1px solid rgba(56, 113, 184, 0.2);
		border-radius: 8px;
		color: var(--primary-color);
		text-decoration: none;
		font-weight: 600;
		transition: all 0.3s ease;
	}

	.btn-secondary:hover {
		background: var(--primary-color);
		color: white;
		text-decoration: none;
		transform: translateY(-2px);
		box-shadow: 0 8px 24px rgba(56, 113, 184, 0.3);
	}

	@media (max-width: 768px) {
		.blog-header {
			padding: 4rem 0 3rem;
		}

		.blog-meta {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.5rem;
		}

		.blog-title {
			font-size: 2rem;
		}

		.blog-excerpt {
			font-size: 1.1rem;
		}

		.blog-content {
			padding: 3rem 0;
		}

		.content {
			font-size: 1rem;
		}

		.content h1 {
			font-size: 2rem;
		}

		.content h2 {
			font-size: 1.75rem;
		}

		.content h3 {
			font-size: 1.4rem;
		}

		.content blockquote {
			padding: 1rem 1.5rem;
		}
	}
</style>